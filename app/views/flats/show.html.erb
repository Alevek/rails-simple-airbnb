    <div class="flat-title">
      <h2> <%= Flat.find(params[:id]).name %> </h2>
      <p><%= Flat.find(params[:id]).address %></p>
    </div>
    <div class="flat-description">
      <h4> A bit more about this flat... </h4>
      <p><%= Flat.find(params[:id]).description %></p>
      <div id='map' style='width: 400px; height: 300px;'></div>
    </div>
    <div class="flat-details">
      <h4> Details </h4>
      <p><%= Flat.find(params[:id]).number_of_guests %><i class="material-icons">people</i><%= Flat.find(params[:id]).price_per_night %><i class="material-icons">euro_symbol</i></p>
    </div>
  </div>
</div>
